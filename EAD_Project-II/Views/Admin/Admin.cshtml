@model EAD_Project_II.Models.AdminViewModel
@{
    Layout = "~/Views/Shared/layout_1.cshtml";
    ViewBag.Title = "Admin Login";
}


<style>
    body{
        background-color: #E6E6E6;
    }
    .text-center{
       
        margin-bottom:30px;
        color:white;
    }
    .lg-btn{
        width:100%;
        margin-top:20px;
        margin-bottom:20px;
        background-color:white;
        color:black;
        border:none;
        /* #E6E6E6 */
    }
    .lg-btn:hover{
        background-color:black;
        color:white;
        font-weight:800;
        border:1px solid white;
           transition: background-color 0.5s;
    }

    .custom-field, .custom-field:focus {
        /* Set your desired background color */
        background-color: black;
        /* Set text color */
        color: white; /* Adjust the color as needed */
        /* Additional styling */
        border: 1px solid white;
    }
</style>
<div class="card mx-auto" style="max-width: 400px; background-color: #f8f9fa; margin-top:100px; background-color:black; border-radius:7px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);">
    <div class="card-body">
        <br />
        <img src="~/images/admin.png" width="110px" height="95px" style="display: block; margin: 0 auto; filter: brightness(0) invert(1);" />
        <br />
        <h3 class="text-center">Admin Login</h3>

        @using (Html.BeginForm("Admin", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control custom-field", placeholder = "Enter your name" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
            <br />
            <div class="form-group">
                @Html.PasswordFor(model => model.Password, new { @class = "form-control custom-field", placeholder = "Enter password" })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
            <br />

            <button type="submit" class="lg-btn btn btn-primary btn-block">Login</button>
            <p style="text-align:center; color:white;">
                <a href="@Url.Action("StartView", "Admin")" style="text-decoration: none; color: white;">Goto Start</a>
            </p>


        }
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    </div>
</div>
