<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EAD_Project_II.styles.css" asp-append-version="true" />
    <style>
        .custom-nav-bg {
            background-color: #000033;
            color: white;
        }

        .heading-color {
            color: #E5E5FF;
            background-color: #000033;
        }

        .container-fluid a:hover {
            color: #E5E5FF;
        }
        .lg-btn{
            border:1px solid white;
            border-radius:4px;
        }
        .lg-btn:hover a{
                background-color: red;
            color: #000033 !important;
        }
        .togglr-btn{
            border:1px solid white;
        }

       .tog-icon{
            color: white !important;
        }
    </style>
</head>
<body>
    <header>
        <nav class=" navbar navbar-expand-sm navbar-toggleable-sm custom-nav-bg border-bottom box-shadow mb-3 ">
            <div class="container-fluid">
                <a class="navbar-brand heading-color " asp-area="" asp-controller="Dashboard" asp-action="Dashboard">Student Interest System</a>
                <button class="navbar-toggler togglr-btn" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon tog-icon">||||||</span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">         
                            <a class="nav-link text-light" asp-area="" asp-controller="StudentList" asp-action="Students">Students List</a>                           
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="AddStudent" asp-action="AddStudent">Add Student</a>
                        </li>                        
                    </ul>
                    <ul class="navbar-nav lg-btn">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Login" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

